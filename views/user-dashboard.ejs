<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <!-- CSS Link -->
    <link rel="stylesheet" href="css/user-dashboard.css">
    <!-- Font Awesome CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <!-- Header -->
    <div class="custom-header">
        <div class="logo">
            <img src="/images/logo.png" alt="Logo">
        </div>
        <div class="welcome-text">
            <h1>Welcome Back, User!</h1>
        </div>
        <div class="profile-icon">
            <i class="fa-solid fa-circle-user"></i>
        </div>
    </div>

    <!-- Side Navbar -->
    <div class="navbar">
        <nav>
            <ul>
                <li><a href="#" class="active">DASHBOARD</a></li>
                <li><a href="#">WORKOUT</a></li>
                <li><a href="#">NUTRITION</a></li>
                <li><a href="#">PROFILE</a></li>
            </ul>
        </nav>
    </div>

    <!-- Main Content: Container beside Navbar -->
    <div class="content-container">
        <div class="overview-card">
            <h2>Overview</h2>
        
            <!-- Inner Container Wrapper -->
            <div class="inner-container-wrapper">
                <!-- First Inner Container -->
                <div class="inner-container">
                    <h3>Workout Summary</h3>
                </div>
                
                <!-- Second Inner Container -->
                <div class="inner-container">
                    <h3>Nutrition Summary</h3>
                </div>
            </div>

            <!-- Additional Container Below -->
            <div class="inner-container-below">
                <h3>Progress Tracker</h3>
            </div>
        </div>  
    </div>

    <!-- Right Side New Container -->
    <div class="right-side-container">
        <h3>UPCOMING WORKOUT</h3>
        
        <!-- New Lower Container -->
        <div class="lower-right-container">
            <h3>Next Goal</h3>
            <p>Goal description or task details</p>
        </div>
    </div>
</body>
</html>

